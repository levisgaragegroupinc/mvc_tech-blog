<article>
    <div class="post-header-space">
        <div class="post-header">
            <h2>{{title}}</h2>
        </div>    
        <div class="post-header">
            <h2>{{format_time created_at}}</h2>
            <a href="/edit/"{{id}}>
                <h3>{{comment.length}}</h3>
                <h3>Comments</h3>
            </a>
        </div>
    </div>
    <p class="post-content">{{post_txt}}</p>
</article>
{{#each this}}
<div class="post-header-space">
    <div class="post-header">
        <h2>{{user.username}}</h2>
    </div> 
    <div class="post-header">
        <h2>{{format_time created_at}}</h2>
    </div>
<p class="post-content">{{comment_txt}}</p>
</div>
{{/each}}